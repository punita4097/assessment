
@page "/AddNav"


@using BlazorAssignment1.Data.Services
@using BlazorAssignment1.Data.Models
@inject NavbarServices navbarservice 
@inject NavigationManager navigationManager


<form>
    <div class="row">
        <div class="col-md-10">
            <div class=" form-group">
                <label for="Name" class="control-label">CategoryName</label>
                <input form="Name" class="form-control" @bind="@objnavBarInfo.CategoryName" />
            </div>

            <div class=" form-group">
                <label for="Email" class="control-label">Reference</label>
                <input form="Email" class="form-control" @bind="@objnavBarInfo.Reference" />
            </div>
            


        </div>

    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateNavBar" value="Add" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="cancel" />

            </div>
        </div>
    </div>
</form>


@code {
    NavBarInfo objnavBarInfo = new NavBarInfo();

    protected void CreateNavBar()
    {
        navbarservice.AddNavBar(objnavBarInfo);
        navigationManager.NavigateTo("/Index");
    }
    void Cancel()
    {
        navigationManager.NavigateTo("/Index");
    }


}

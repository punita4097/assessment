@model MvcAssign1.Models.Student

@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @using (Html.BeginForm("Index", "ShowReverse", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center"> Details</th>
            </tr>
            <tr>
                <td>Student ID </td>
                <td>
                    @Html.TextBoxFor(m => m.StudentID)
                </td>
            </tr>
            <tr>
                <td>Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.Name)
                </td>
            </tr>
            <tr>


            <tr>
                <td>Country: </td>
                <td>
                    @Html.TextBoxFor(m => m.Country)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
</body>
</html>


